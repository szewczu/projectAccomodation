@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>*@
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<h1>Ogłoszenia</h1>
<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>ID Użytkownika</th>
                    <th>Login</th>
                    <th>Email</th>
                    <th>Edytuj</th>
                    <th>Usuń</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>
       

        $(document).ready(function ()
        {

            $("#example").DataTable({
                "language":
                    {
                    "info": "Pokaż _START_ to _END_ of _TOTAL_ rekordów",
                    "infoEmpty":"Pokaż 0 to 0 of 0 rekordów",
                    "processing":"Wczytywanie...",
                    "search": "Szukaj:",
                    "lengthMenu": "Pokaż _MENU_ rekordów",
                    "zeroRecords": "Nie znaleziono rekordów",
                    "paginate": {
                        "first":      "Pierwszy",
                        "last":       "Ostatni",
                        "next":       "Następny",
                        "previous":   "Poprzedni"
                    },
                    "aria": {
                        "sortAscending":  ": aktywuj, aby sortować kolumny rosnąco",
                         "sortDescending": ":  aktywuj, aby sortować kolumny malejąco"
                    }
                    },
                "processing": true, 
                "serverSide": true, 
                "filter": true, 
                "orderMulti": false, 
                "ajax": {
                    "url": "/AdminPanelAdvertisement/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                    [{
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }],
                "columns": [
                    { "data": "Id", "name": "Id", "autoWidth": true },
                    { "data": "UserName", "name": "UserName", "autoWidth": true },
                    { "data": "Email", "name": "Email", "autoWidth": true },
                    

                    {
                        "render": function (data, type, row)
                        
                        { return "<a class='btn btn-info' onclick=EditAdvertisement('" + row.Id + "'); href='/AdminPanelAdvertisement/ShowEditAdvertisement'  />Edytuj</a>"; }
                    },
                    {
                        data: null, render: function (data, type, row)
                        {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteData('" + row.Id + "'); >Usuń</a>";
                        }
                    },
                ]


            });
        });


    function DeleteData(Id)
        {
            if (confirm("Czy na pewno chcesz usunąć?"))
            {
                Delete(Id);
            }
            else
            {
                return false;
            }
        }


    function Delete(Id) {

    var url = '@Url.Content("~/")' + "DemoGrid/Delete";

        $.ajax({
            type: 'GET',
            url: '/AdminPanelAdvertisement/DeleteUser',
            data: {Id:Id},
            dataType: 'json',
            success: function (data) {
                alert('Wystąpił błąd');

            },
            error: function (error) {
                alert('Pomyślnie usunięto użytkownika');
                window.location.reload();
            }
        });
    };

    function EditAdvertisement(Id) {
        localStorage.setItem("storageId", Id);
        $.ajax({
            type: 'GET',
            url: '/AdminPanelAdvertisement/EditAdvertisement',
            data: {Id:Id},
            dataType: 'json',
            success: function (data) {
            },
            error: function (error) {
            }
        });


    };

</script>

