@page
@model ManageAccount
@{
    ViewData["Title"] = "Profile";
    Layout = "/Areas/Identity/Pages/Account/Manage/_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="InputInformation.PhoneNumber"></label>
                <input asp-for="InputInformation.PhoneNumber" class="form-control" />
                <span asp-validation-for="InputInformation.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    </div>
                }
                else
                {
                    <input asp-for="Email" class="form-control" disabled />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" onclick="" class="btn btn-link">Send verification email</button>
                }
            </div>
            <div class="form-group">
                <label asp-for="InputEmail.NewEmail"></label>
                <input asp-for="InputEmail.NewEmail" class="form-control" />
                <span asp-validation-for="InputEmail.NewEmail" class="text-danger"></span>
            </div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary">Change email</button>
        </form>
    </div>
</div>
<div class="col-md-9">

</div>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
